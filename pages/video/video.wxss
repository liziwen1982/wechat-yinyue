/* pages/video/video.wxss */
/* 头部区域 */
.videoContainer .header{
  display: flex;
  padding: 10rpx;
}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  flex: 1;
  text-align: center;
  color: #d43c33;
  font-size: 26rpx;
  line-height: 60rpx;
}

/* 导航区 */
.navScroll {
  display: flex;
  white-space: nowrap;
}

.navScroll .navItem {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  
}

.navScroll .navItem .native {
  border-bottom: 1rpx solid #d43c33;
}